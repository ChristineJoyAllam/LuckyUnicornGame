#Function
def yes_no(question):
  valid = False
  while not valid:
    response = input(question).lower()
    if response == 'yes' or response == 'y':
      response = 'yes'
      return response
    elif response =="no" or response == 'n':
      response = 'no'
      return response
  else:
    print('Please answer Yes/No')

#Routine
show_instrustions = yes_no('Have you played this game before?')
print('You choose {}'.format(show_instrustions))
print()
having_fun = yes_no('Are you having fun?')
print('You said {} to having fun'.format(having_fun))
